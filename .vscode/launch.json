  "version": "0.2.0",
  "configurations": [
    {
      "name": "Pico Debug",
      "cwd": "${workspaceFolder}",
      "executable": "./build/aq-sensor.elf",
      "request": "launch",
      "type": "cortex-debug",
      "runToEntryPoint": "main",
      "servertype": "openocd",
      "device": "Pico2040",
      "configFiles": ["interface/cmsis-dap.cfg", "target/rp2040.cfg"],
      "svdFile": "../../pico-sdk/src/rp2040/hardware_regs/rp2040.svd",
      "postRestartCommands": [
        "break main",
        "continue"
      ]
    }
  ]
}